<Page x:Class="IHM.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel LastChildFill="True">

        <Border DockPanel.Dock="Top" Background="#1e1e1e" Padding="8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="▶ Play"  Click="BtnPlay_Click"  Padding="10,4"/>
                <Button Content="⏸ Pause" Click="BtnPause_Click" Padding="10,4"/>
                <Button Content="⏭ Next"  Click="BtnNext_Click"  Padding="10,4"/>

                <Separator Width="16" Opacity="0"/>

                <TextBlock Text="Temps par génération (ms) :" VerticalAlignment="Center" Foreground="White" Margin="0,0,6,0"/>
                <Slider x:Name="SpeedSlider"
                        Width="180"
                        Minimum="30" Maximum="1000"
                        Value="300"
                        TickFrequency="10" IsSnapToTickEnabled="True"
                        ValueChanged="SpeedSlider_ValueChanged"/>
                <TextBlock x:Name="SpeedLabel" Text="300"
                           VerticalAlignment="Center" Foreground="White" Margin="6,0,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="GameCanvas"
                    Background="Transparent"/>
        </ScrollViewer>

    </DockPanel>
</Page>